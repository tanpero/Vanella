{
  "name": "Vanella",
  "version": "0.1.0",
  "description": "A writing and inspiration archiving application",
  "main": "dist/main.js",
  "scripts": {
    "start": "node build.js && electron .",
    "build": "node build.js && electron-builder",
    "to-ms-store": "npm run build && cp 'build/Vanella Setup 0.1.0.exe' build/Vanella.exe && electron-windows-store --input-directory build --output-directory release/Microsoft-store --package-version 0.1.0.0 --package-name vanella",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "git+https://github.com/tanpero/Vanella.git",
  "author": "Camille",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tanpero/Vanella/issues"
  },
  "homepage": "https://github.com/tanpero/Vanella#readme",
  "build": {
    "appId": "io.camille.vanella",
    "productName": "Vanella",
    "publish": [
      {
        "provider": "github",
        "owner": "tanpero",
        "repo": "vanella"
      }
    ],
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/logo.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/logo.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/logo.png"
    },
    "asar": true,
    "extends": null,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.19.11",
    "esbuild-plugin-sass": "^1.0.1",
    "fs-extra": "^11.2.0",
    "highlight.js": "^11.9.0",
    "hyphenation.en-us": "^0.2.1",
    "mime": "^4.0.1",
    "node-base64-image": "^2.0.6",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-markdown": "^1.12.0",
    "prosemirror-model": "^1.19.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-utils": "^1.2.1-0",
    "prosemirror-view": "^1.32.7",
    "rehype-highlight": "^7.0.0",
    "rehype-mathjax": "^6.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-images": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-unwrap-images": "^4.0.0",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "dependencies": {
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.10.0",
    "@codemirror/language-data": "^6.4.0",
    "@codemirror/state": "^6.4.0",
    "codemirror": "^6.0.1",
    "highlight.js": "^11.9.0",
    "hyphenation.en-us": "^0.2.1",
    "mime": "^4.0.1",
    "node-base64-image": "^2.0.6",
    "prosemirror-commands": "^1.5.2",
    "prosemirror-history": "^1.3.2",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-markdown": "^1.12.0",
    "prosemirror-model": "^1.19.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-utils": "^1.2.1-0",
    "prosemirror-view": "^1.32.7",
    "rehype-document": "^7.0.3",
    "rehype-format": "^5.0.0",
    "rehype-highlight": "^7.0.0",
    "rehype-mathjax": "^6.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-images": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "remark-unwrap-images": "^4.0.0",
    "unified": "^11.0.4",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0"
  }
}
